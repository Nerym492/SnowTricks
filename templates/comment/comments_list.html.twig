<div class="comment-list" id="comment-list">
    {% include 'partials/alert_box.html.twig' %}
    {% for comment in comments %}
        <div class="comment">
            <img src="{{ path('get_profile_picture', {'userPseudo': comment.userPseudo}) }}" alt="profile picture {{ comment.userPseudo }}">
            <div>
                <p class="comment-user-info">
                    {{ comment.userPseudo }}
                    <span class="small">
                            - {{ comment.data.creationDate|date("d/m/Y \\Ã  H:i") }}
                        </span>
                </p>
                <p class="comment-text">
                    {{ comment.data.content }}
                </p>
            </div>
        </div>
    {% endfor %}
    {% if comments is empty %}
        <div class="center no-comments">
            <p>No comments found for this trick. Be the first to leave one!</p>
        </div>
    {% endif %}
    {% if hiddeLoadButton is empty %}
    <div class="center">
        <button class="btn-arrow--white btn-trick-list" id="btn-load-more-comments">Load more</button>
    </div>
    {% endif %}
</div>